<h1 class="font-bold text-2xl">Articles</h1>

<p class="mt-2">
    Our blog has <%= Article.public_count %> articles and counting!
</p>

<ul class="flex gap-3 mt-4">
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li class="border w-64 h-64">
                <%= link_to article.title, 
                    article_path(article), 
                    class: "block h-full w-full font-bold flex items-center justify-center" 
                %>
            </li>
        <% end %>
    <% end %>
    <li class="w-64 h-64 flex items-center justify-center">
        <%= link_to "+", 
            new_article_path, 
            class: "border rounded-full h-20 w-20 flex items-center justify-center" 
        %>
    </li>
</ul>