 <%= form_with model: [ @article, @article.comments.build ], class: "space-y-3" do |form| %>
    <p>
        <%= form.label :commenter, 'Your name' %><br>
        <%= form.text_field :commenter %>
    </p>
    <p>
        <%= form.label :body, 'Comment' %><br>
        <%= form.text_area :body %>
    </p>
    <%= form.submit class: 'p-3 rounded-lg bg-blue-100 hover:bg-blue-200' %>
<% end %>